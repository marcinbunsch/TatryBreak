{
  "name": "Tatrrace",
  "manifest_version": 2,
  "version": "0.9.0",
  "description" :"Aktualny podgląd na warunki pogodowe w Tatrach w nowej zakładce",
  "author": "Jarek Pelczynski",

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "icon_16.png",
      "38": "icon_48.png"
    },
    "default_title": "Tatrrace"
  },

  "background":{
    "scripts":["js/background.js"]
  },

  "permissions": [
    "http://www.test.tatrynet.pl/*",
    "http://tpn.pl/*",
    "http://www.yr.no/*",
    "storage"
  ]
}
